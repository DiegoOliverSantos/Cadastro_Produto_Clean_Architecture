@using CleanArchMVC.Application.DTOs
@model IEnumerable<CategoryDTO>

@{
    ViewData["Title"] = "Configurações de categorias";
}


<div>
    <h2>@ViewData["Title"]</h2>
</div>
<hr />
<div class="row align-items-center mb-3">
    <!-- Botão Cadastrar (esquerda) -->
    <div class="col-md-6 d-flex justify-content-start">
        <a asp-action="Create" class="btn btn-primary">
            <span class="fas fa-plus"></span> Register New
        </a>
    </div>

    <!-- Filtros (direita) -->
    <div class="col-md-6 d-flex justify-content-end">
        <div class="text-end">
            <div class="mb-1">Filtros</div>
            <div>
                <a asp-action="Index"
                   asp-route-desativado=""
                   class="btn btn-sm btn-outline-primary @TempData["all"]">
                    Todos
                </a>

                <a asp-action="Index"
                   asp-route-desativado="true"
                   class="btn btn-sm btn-outline-primary @TempData["disable"]">
                    Desativados
                </a>

                <a asp-action="Index"
                   asp-route-desativado="false"
                   class="btn btn-sm btn-outline-primary @TempData["active"]">
                    Ativados
                </a>
            </div>
        </div>
    </div>
</div>

<br />
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show auto-alert" role="alert">
        @TempData["Error"]
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show auto-alert" role="alert">
        @TempData["Success"]
    </div>
}

<div class="panel panel-default">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>#</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" title="Edit" class="btn btn-warning">
                            <span class="fas fa-edit">Editar</span>
                        </a>

                        <a asp-action="Details" asp-route-id="@item.Id" title="Details" class="btn btn-primary">
                            <span class="fas fa-search">Detalhes</span>
                        </a>
                        @if (item.Disable == false)
                        {
                            <a href="#"
                               class="btn btn-danger"
                               data-toggle="modal"
                               data-target="#confirmDeleteModal"
                               data-id="@item.Id">
                                <span class="fas fa-trash-alt">Desativar</span>
                            </a>
                        }
                        else
                        {
                            <a href="#"
                               class="btn btn-success"
                               data-toggle="modal"
                               data-target="#confirmActiveModal"
                               data-id="@item.Id">
                                <span class="fas fa-trash-alt">Ativar</span>
                            </a>
                        }


                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal fade" id="confirmDeleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="deleteId" name="id" />
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Desativação</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>


                <div class="modal-body">
                    Deseja realmente desativar esta categoria?
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Cancelar
                    </button>

                    <button type="submit" class="btn btn-danger">
                        Desativar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="confirmActiveModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Active" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="activeId" name="id" />
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Recuperação</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>


                <div class="modal-body">
                    Deseja realmente Ativar esta categoria?
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Cancelar
                    </button>

                    <button type="submit" class="btn btn-success">
                        Ativar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('[data-target="#confirmDeleteModal"]').forEach(button => {
            button.addEventListener('click', function () {
                var id = this.getAttribute('data-id');
                document.getElementById('deleteId').value = id;
            });
        });
    });
        document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('[data-target="#confirmActiveModal"]').forEach(button => {
            button.addEventListener('click', function () {
                var id = this.getAttribute('data-id');
                document.getElementById('activeId').value = id;
            });
        });
    });
</script>